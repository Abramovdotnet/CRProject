<UserControl x:Class="CRProjectEditor.Views.WorldView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRProjectEditor.Views"
             xmlns:viewModels="clr-namespace:CRProjectEditor.ViewModels"
             xmlns:models="clr-namespace:CRProjectEditor.Models" 
             xmlns:converters="clr-namespace:CRProjectEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="300"/> 
            <ColumnDefinition Width="7*"/> 
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0,0,1,0" Padding="5"> 
            <TabControl>
                <TabItem Header="Scenes">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5">
                        <StackPanel>
                            <!-- Новый UI для Drag-and-Drop шаблонов сцен -->
                            <TextBlock Text="Создание Сцен (Drag-and-Drop)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="Перетащите тип сцены на карту:" Margin="0,0,0,5" TextWrapping="Wrap"/>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" Margin="0,0,0,10">
                                <ItemsControl ItemsSource="{Binding AvailableSceneTypesForDrag}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:SceneType}">
                                            <Border BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="1" CornerRadius="3" Margin="3" Padding="8,5" MinWidth="80" Background="{StaticResource ControlBackgroundBrush}">
                                                <TextBlock Text="{Binding}" HorizontalAlignment="Center" MouseDown="SceneTemplate_MouseDown"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <Button Content="Сохранить расположение" Command="{Binding SaveCurrentMapLayoutCommand}" Margin="0,5,0,5" Padding="10,5"/>
                            <Button Content="Сгенерировать координаты" Command="{Binding GenerateCoordinatesCommand}" Margin="0,0,0,10" Padding="10,5"/>

                            <!-- Selected Scene Details and Connection Management -->
                            <Separator Margin="0,10,0,10"/>
                            <TextBlock Text="Выбранная Сцена (Карта)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                                       Visibility="{Binding MapSelectedScene, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <Grid Visibility="{Binding MapSelectedScene, Converter={StaticResource NullToVisibilityConverter}}" Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MapSelectedScene.Id}" Margin="0,2,0,2"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MapSelectedScene.Name}" TextWrapping="Wrap" Margin="0,2,0,2"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MapSelectedScene.SceneType}" Margin="0,2,0,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="X:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding MapSelectedScene.X}" Margin="0,2,0,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Y:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MapSelectedScene.Y}" Margin="0,2,0,2"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Описание:" FontWeight="SemiBold" Margin="0,2,5,2" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding MapSelectedScene.Description}" TextWrapping="Wrap" MaxHeight="60" VerticalAlignment="Top" Margin="0,2,0,2"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Подключения:" FontWeight="SemiBold" Margin="0,2,5,2" VerticalAlignment="Top"/>
                                <ScrollViewer Grid.Row="6" Grid.Column="1" MaxHeight="80" VerticalScrollBarVisibility="Auto" Margin="0,2,0,2">
                                    <ItemsControl ItemsSource="{Binding MapSelectedScene.Connections}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:SceneConnection}">
                                                <TextBlock>
                                                    <Run Text="-> ID:"/>
                                                    <Run Text="{Binding ConnectedSceneId}"/>
                                                    <Run Text=", Тип: "/>
                                                    <Run Text="{Binding ConnectionType}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Подключить к:" VerticalAlignment="Center" Margin="0,5,5,5"/>
                                <ComboBox Grid.Row="7" Grid.Column="1" 
                                          ItemsSource="{Binding AllOtherScenesForConnection}"
                                          SelectedItem="{Binding SelectedSceneForConnection, Mode=TwoWay}"
                                          VerticalAlignment="Center" Margin="0,5,0,5">
                                     <ComboBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:Scene}">
                                            <TextBlock>
                                                <Run Text="{Binding Name}"/>
                                                <Run Text=" (ID: "/>
                                                <Run Text="{Binding Id}"/>
                                                <Run Text=")"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="Добавить подключение" Command="{Binding AddConnectionCommand}" Padding="8,4" Margin="0,0,5,0"/>
                                    <Button Content="Удалить все подключения" Command="{Binding DeleteAllConnectionsCommand}" Padding="8,4" Margin="0,0,5,0"/>
                                    <Button Content="Удалить сцену" Command="{Binding DeleteSelectedSceneCommand}" Padding="8,4"/>
                                </StackPanel>
                            </Grid>

                            <!-- Image for Selected Scene -->
                            <Border BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="1" Margin="0,10,0,0"
                                    Visibility="{Binding SelectedSceneImagePath, Converter={StaticResource NullToVisibilityConverter}}">
                                <StackPanel>
                                    <Image Source="{Binding SelectedSceneImagePath}" 
                                           Stretch="Fill" 
                                           HorizontalAlignment="Stretch"
                                           MaxHeight="280"/> 
                                    <TextBlock Text="{Binding SelectedSceneImagePath}"
                                               FontSize="10"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Assets">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0,0,0,1" Margin="5"
                                Visibility="{Binding SelectedAssetPreviewPath, Converter={StaticResource NullToVisibilityConverter}}">
                            <Image Source="{Binding SelectedAssetPreviewPath}" 
                                   Height="280" 
                                   Stretch="Uniform" 
                                   HorizontalAlignment="Center"/>
                        </Border>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5" Background="{StaticResource BackgroundBrush}">
                            <ListBox ItemsSource="{Binding AvailableAssetImages}" 
                                     SelectedItem="{Binding SelectedAsset, Mode=TwoWay}"
                                     HorizontalContentAlignment="Stretch" Background="{StaticResource BackgroundBrush}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical"/> 
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:AssetDisplayInfo}">
                                        <Border BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0,0,0,1" Margin="2" Padding="5" Background="{StaticResource ControlBackgroundBrush}" MouseDown="Asset_MouseDown">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding ImagePath}" Width="80" Height="45" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding AssetId, StringFormat='Asset ID: {0}'}" FontSize="12" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding ImagePath}" FontSize="9" TextWrapping="Wrap" Foreground="{StaticResource ForegroundBrush}" Opacity="0.7"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Border>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <DataGrid Grid.Row="0" ItemsSource="{Binding Scenes}"                        
                      AlternationCount="2"
                      SelectedItem="{Binding MapSelectedScene}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="SizeToHeader" MinWidth="40" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding SceneType}" Width="SizeToCells" MinWidth="80" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Header="Indoor" Binding="{Binding IsIndoor}" Width="SizeToHeader" MinWidth="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Parent ID" Binding="{Binding ParentSceneId}" Width="SizeToHeader" MinWidth="70" IsReadOnly="True"/>
                    <DataGridTextColumn Header="X" Binding="{Binding X}" Width="SizeToHeader" MinWidth="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Y" Binding="{Binding Y}" Width="SizeToHeader" MinWidth="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Child IDs" Binding="{Binding ChildSceneIds, Converter={StaticResource IntListToStringConverter}}" Width="SizeToCells" MinWidth="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Hub IDs" Binding="{Binding HubSceneIds, Converter={StaticResource IntListToStringConverter}}" Width="SizeToCells" MinWidth="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" MinWidth="200" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <local:InteractiveMapView x:Name="InteractiveMap" Grid.Row="1" Scenes="{Binding Scenes}"/>
        </Grid>
    </Grid>
</UserControl> 