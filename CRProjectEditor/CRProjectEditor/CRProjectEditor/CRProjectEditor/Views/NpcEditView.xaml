<Window x:Class="CRProjectEditor.Views.NpcEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRProjectEditor.Views"
        xmlns:viewModels="clr-namespace:CRProjectEditor.ViewModels"
        mc:Ignorable="d"
        Title="Редактировать NPC" Height="600" Width="450"
        d:DataContext="{d:DesignInstance Type=viewModels:NpcEditViewModel, IsDesignTimeCreatable=False}"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=txtName}"
        Background="{StaticResource BackgroundBrush}" 
        Foreground="{StaticResource ForegroundBrush}"
        FontFamily="{StaticResource DefaultFontFamily}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ID:"/>
                <TextBox Text="{Binding EditingNpc.Id}" IsReadOnly="True" Margin="0,0,0,10"/>

                <TextBlock Text="Имя:"/>
                <TextBox x:Name="txtName" Text="{Binding EditingNpc.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Пол:"/>
                <ComboBox ItemsSource="{Binding AvailableSexes}" 
                          SelectedItem="{Binding EditingNpc.Sex, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Возраст:"/>
                <TextBox Text="{Binding EditingNpc.Age, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Профессия:"/>
                <ComboBox ItemsSource="{Binding AvailableProfessions}" 
                          SelectedItem="{Binding EditingNpc.Profession, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="ID Домашней локации:"/>
                <TextBox Text="{Binding EditingNpc.HomeLocationId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Мораль:"/>
                <ComboBox ItemsSource="{Binding AvailableMoralities}" 
                          SelectedItem="{Binding EditingNpc.Morality, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                
                <TextBlock Text="Мотивация:"/>
                <ComboBox ItemsSource="{Binding AvailableMotivations}" 
                          SelectedItem="{Binding EditingNpc.Motivation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <CheckBox IsChecked="{Binding EditingNpc.IsVampire, UpdateSourceTrigger=PropertyChanged}" Content="Вампир" Margin="0,5,0,10"/>
                
                <TextBlock Text="Предыстория:"/>
                <TextBox Text="{Binding EditingNpc.Background, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="80" VerticalScrollBarVisibility="Auto"/>
                
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 