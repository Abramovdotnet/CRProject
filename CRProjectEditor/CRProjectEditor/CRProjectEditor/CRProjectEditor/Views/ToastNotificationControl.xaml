<UserControl x:Class="CRProjectEditor.Views.ToastNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CRProjectEditor.Views"
             xmlns:vm="clr-namespace:CRProjectEditor.ViewModels"
             xmlns:models="clr-namespace:CRProjectEditor.Models"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ToastNotificationViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="50" d:DesignWidth="300"
             Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
    <UserControl.Resources>
        <Style TargetType="Border" x:Key="ToastBorderStyle">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Background" Value="#333"/> <!-- Default background -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ToastType.Info}">
                    <Setter Property="Background" Value="#2E7DA4"/>
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ToastType.Success}">
                    <Setter Property="Background" Value="#3A773C"/>
                    <Setter Property="BorderBrush" Value="#5CB85C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ToastType.Warning}">
                    <Setter Property="Background" Value="#B56323"/>
                    <Setter Property="BorderBrush" Value="#F0AD4E"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Type}" Value="{x:Static models:ToastType.Error}">
                    <Setter Property="Background" Value="#A43434"/>
                    <Setter Property="BorderBrush" Value="#D9534F"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="ToastMessageStyle">
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource ToastBorderStyle}">
        <TextBlock Text="{Binding Message}" Style="{StaticResource ToastMessageStyle}"/>
    </Border>
</UserControl> 