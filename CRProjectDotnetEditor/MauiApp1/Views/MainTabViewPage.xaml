<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MauiApp1.Views"
             x:Class="MauiApp1.Views.MainTabViewPage"
             Title="Game Editor"
             Shell.NavBarIsVisible="false"
             BackgroundColor="{AppThemeBinding Dark=Black, Light=White}">
    <Grid RowDefinitions="Auto, Auto, *">
        
        <HorizontalStackLayout Grid.Row="0" Spacing="5" Padding="5" HorizontalOptions="Start">
            <Button x:Name="WorldTabButton" Text="World" Clicked="OnTabButtonClicked" Style="{StaticResource TabButtonStyle}" />
            <Button x:Name="NPCsTabButton" Text="NPCs" Clicked="OnTabButtonClicked" Style="{StaticResource TabButtonStyle}" />
            <Button x:Name="QuestsTabButton" Text="Quests" Clicked="OnTabButtonClicked" Style="{StaticResource TabButtonStyle}" />
            <Button x:Name="DialoguesTabButton" Text="Dialogues" Clicked="OnTabButtonClicked" Style="{StaticResource TabButtonStyle}" />
        </HorizontalStackLayout>

        <BoxView Grid.Row="1" HeightRequest="1" Color="{AppThemeBinding Dark=DarkGray, Light=LightGray}" Margin="5,0"/>

        <ContentView Grid.Row="2" x:Name="CurrentViewContent" />
    </Grid>
</ContentPage>