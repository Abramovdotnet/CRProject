<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.WorldView">

    <ContentView.BindingContext>
        <viewmodels:WorldViewModel />
    </ContentView.BindingContext>

    <VerticalStackLayout
        Spacing="25"
        Padding="30,20"
        VerticalOptions="Center">

        <Button 
            x:Name="GenerateMapBtn"
            Text="Generate Map Coordinates"
            SemanticProperties.Hint="Generates new x,y coordinates for Duskvale.json map locations"
            Command="{Binding GenerateMapCoordinatesCommand}"
            HorizontalOptions="Center" />
            
        <Label Text="{Binding StatusMessage}"
               HorizontalOptions="Center"
               FontSize="14"/>

    </VerticalStackLayout>

</ContentView> 